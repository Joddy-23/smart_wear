/* ============ 整体风格样式变量 =============== */
.image-bg {
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
}
.box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.box .pic {
  height: 230rpx;
  width: 230rpx;
  box-shadow: 0 0 1px 1.5px #888888;
}
.box .pic image {
  width: 100%;
  height: 100%;
}
.grid-text {
  font-size: 14px;
  color: #909399;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.wrap {
  padding: 12px;
}
.bg-purple {
  background: #CED7E1;
}
.bg-purple-light {
  background: #e5e9f2;
}
.bg-purple-dark {
  background: #99a9bf;
}

