/* ============ 整体风格样式变量 =============== */
.logo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}
.logo image {
  width: 200rpx;
  height: 200rpx;
}
.content {
  padding: 40rpx;
}
.content .row-input {
  margin: 30rpx 0rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  height: 100rpx;
  border: 1rpx solid var(--primary-color);
  border-radius: 20rpx;
}
.content .row-input image {
  padding: 0rpx 10rpx 0rpx 10rpx;
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
}
.content .row-input .iconfont {
  color: var(--primary-color);
  padding: 0rpx 10rpx 0rpx 10rpx;
  flex-shrink: 0;
  font-size: 40rpx;
}
.content .row-input input {
  flex: 1;
  font-size: 30rpx;
  padding: 0rpx 40rpx;
  color: var(--primary-color);
  border-left: 3rpx solid var(--primary-color);
}
.content .row-input .code {
  display: flex;
  justify-content: flex-end;
  letter-spacing: 2rpx;
  width: 180rpx;
  color: var(--primary-color);
}
.content .register-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  height: 100rpx;
  margin: 40rpx 0 40rpx 0;
  border-radius: 20rpx;
  color: #FFFFFF;
  background-color: var(--btn-bg-color);
}
.content .tip-link {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  letter-spacing: 4rpx;
  font-size: 28rpx;
}
.content .tip-link .link {
  color: var(--primary-color);
}

