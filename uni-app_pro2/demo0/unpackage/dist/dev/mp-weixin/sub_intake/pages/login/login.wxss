/* ============ 整体风格样式变量 =============== */
.logo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}
.logo image {
  width: 200rpx;
  height: 200rpx;
}
.loginForm {
  padding: 20rpx 60rpx;
}
.loginForm .row-input {
  margin: 30rpx 0rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  height: 100rpx;
  border: 1rpx solid var(--primary-color);
  border-radius: 20rpx;
}
.loginForm .row-input image {
  padding: 0rpx 10rpx 0rpx 10rpx;
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
}
.loginForm .row-input .iconfont {
  color: var(--primary-color);
  padding: 0rpx 10rpx 0rpx 10rpx;
  flex-shrink: 0;
  font-size: 40rpx;
}
.loginForm .row-input .placeholder {
  font-size: 30rpx;
  color: var(--primary-color);
}
.loginForm .row-input input {
  font-size: 30rpx;
  padding: 0rpx 40rpx;
  color: var(--primary-color);
  border-left: 3rpx solid var(--primary-color);
}
.loginForm .loginBtn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  height: 100rpx;
  border-radius: 20rpx;
  color: #FFFFFF;
  background-color: var(--btn-bg-color);
}
.loginForm .menuLink {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--btn-bg-color);
  letter-spacing: 3rpx;
  line-height: 80rpx;
}

